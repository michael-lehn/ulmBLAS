CONFIG  = cblas


CBLAS_PREFIX          = $(CONFIG)_
ULMBLAS_PREFIX        = ulmblas_
CBLAS_LIB_NAME        = lib$(CONFIG).a
CBLAS_HEADER_NAME     = $(CONFIG).h
CBLAS_INCLUDE_GUARD   = ULMBLAS_$(shell echo $(CONFIG) | tr "a-z" "A-Z")_H

CLAPACK_PREFIX        = $(CBLAS_PREFIX)
ULMLAPACK_PREFIX      = $(ULMBLAS_PREFIX)
CLAPACK_LIB_NAME      = libclapack.a
CLAPACK_HEADER_NAME   = clapack.h
CLAPACK_INCLUDE_GUARD = ULMBLAS_CLAPACK_H
